    agent { label 'maven' }
    triggers { pollSCM ('* * * * *') }
    stages {
        stage('vcs') {
            steps {
                git url: 'https://github.com/spring-projects/spring-petclinic.git',
                    branch: 'develop'
            }
        }
        stage('buildsonar nalysis') {
            steps {
               './mvnw clean verify sonar:sonar \
               Dsonar.login=95ddcf6a5af55375640c0df507f4d176733d48a6 \
               Dsonar.host.url=https://sonarcloud.io \
               Dsonar.organization=qtraju123 \
               Dsonar.projectKey=qtraju123\'
            }
        }
    }
}